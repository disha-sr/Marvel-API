<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgTonyStark"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/tony_stark"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/txtNameTony"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tony Stark"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgTonyStark"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/txtEmailTony"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SteveRogersindustries.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgTonyStark"
                android:layout_below="@+id/txtNameTony"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/txtPhoneNumberTony"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 22223443"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgTonyStark"
                android:layout_below="@+id/txtEmailTony"
                android:textColor="#000000"
                android:layout_marginTop="15dp"/>



        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgWidow"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/widow"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/txtNameWidow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scarlett Johnsson"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgWidow"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/txtEmailWidow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scarlettindustries.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgWidow"
                android:layout_below="@+id/txtNameWidow"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/txtPhoneNumberWidow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 22226746"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgWidow"
                android:layout_below="@+id/txtEmailWidow"
                android:textColor="#000000"
                android:layout_marginTop="15dp"/>



        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/Hulk"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/hulk"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/txtNameHulk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hulk"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/Hulk"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/txtEmailHulk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HulkMarvelindustries.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/Hulk"
                android:layout_below="@+id/txtNameHulk"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/txtPhoneNumberHulk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 22225446"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/Hulk"
                android:layout_below="@+id/txtEmailHulk"
                android:textColor="#000000"
                android:layout_marginTop="15dp"/>



        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgThor"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/thor"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/txtNamethor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chris HemsWorth"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgThor"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/txtEmailthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ChrisHemsWorthindustries.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgThor"
                android:layout_below="@+id/txtNamethor"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/txtPhoneNumberthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 22265446"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imgThor"
                android:layout_below="@+id/txtEmailthor"
                android:textColor="#000000"
                android:layout_marginTop="15dp"/>



        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/BlackPanther"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/black_panther"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/txtNamePanther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Black Pantherr"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/BlackPanther"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/txtEmailSteve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tonystarkindustries.com"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/BlackPanther"
                android:layout_below="@+id/txtNamePanther"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/txtPhoneNumberSteve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 22225446"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/BlackPanther"
                android:layout_below="@+id/txtEmailSteve"
                android:textColor="#000000"
                android:layout_marginTop="15dp"/>



        </RelativeLayout>

    </LinearLayout>


</ScrollView>